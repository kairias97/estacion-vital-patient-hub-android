<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_layout_article_category_container"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"

    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
>
    <TextView
        android:id="@+id/text_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app1:layout_constraintRight_toRightOf="parent"
        app1:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_category_description"
        android:text="Diabetes"
        android:textColor="@android:color/black"
        />
<TextView
    android:id="@+id/text_category_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif"
    android:textSize="16sp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    app:layout_constraintTop_toBottomOf="@id/text_category_name"
    app1:layout_constraintRight_toRightOf="parent"
    app1:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toTopOf="@id/divider"
    android:text="Recomendaciones para evitar lesiones y poder maximizar tus entrenamientos. "

    />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>